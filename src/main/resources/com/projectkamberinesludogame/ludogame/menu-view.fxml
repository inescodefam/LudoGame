<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projectkamberinesludogame.ludogame.MenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="LUDO GAME - 2 Players">
        <font>
            <Font name="System Bold" size="28.0" />
        </font>
    </Label>

    <Label text="Play on localhost using two different ports" />

    <Label text="Port Number:" />
    <TextField fx:id="portField" maxWidth="200.0" promptText="Enter port (e.g., 5000)" />

    <Button fx:id="hostButton" mnemonicParsing="false" onAction="#onHostGame" text="HOST GAME (Player 1 - RED)" prefWidth="250.0">
        <font>
            <Font size="14.0" />
        </font>
    </Button>

    <Button fx:id="joinButton" mnemonicParsing="false" onAction="#onJoinGame" text="JOIN GAME (Player 2 - BLUE)" prefWidth="250.0">
        <font>
            <Font size="14.0" />
        </font>
    </Button>

    <Label text="Instructions:" wrapText="true">
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
    </Label>
    <Label text="1. Player 1: Click 'HOST GAME' on port 5000&#10;2. Player 2: Click 'JOIN GAME' on port 5000&#10;3. Roll dice and click pieces to move them" wrapText="true" />
</VBox>